  <bean id="testSection4" parent="GroupSectionGridLayout">
    <property name="title" value="Test Section 4"/>
    <property name="layoutManager">
      <bean parent="GridLayoutManager" p:numberOfColumns="4"/>
    </property>
    <property name="items">
      <list>
        <bean parent="FieldGroup" p:label="Field Group 1" p:width="40%" p:labelField.width="10%">
          <property name="items">
            <list>
              <bean parent="AttributeField_Form" p:propertyName="field20" p:label="Field 11" p:maxLength="4"
                    p:required="true">
                <property name="control">
                  <bean parent="TextControl" p:size="5"/>
                </property>
              </bean>
              <bean parent="AttributeField_Form" p:propertyName="field21" p:label="Field 12" p:maxLength="20">
                <property name="control">
                  <bean parent="TextControl" p:size="21"/>
                </property>
              </bean>
              <bean parent="AttributeField_Form" p:propertyName="field22" p:label="Field 13">
                <property name="control">
                  <bean parent="CheckboxControl"/>
                </property>
                <property name="defaultValue" value="true"/>
              </bean>
              <bean parent="AttributeField_Form" p:propertyName="field23" p:label="Field 14" p:maxLength="9">
                <property name="control">
                  <bean parent="TextControl" p:size="10"/>
                </property>
              </bean>
            </list>
          </property>
        </bean>
        <bean parent="FieldGroup" p:label="Currency Type" p:width="40%" p:labelField.width="10%">
          <property name="items">
            <list>
              <bean parent="AttributeField_Form" p:propertyName="field24" p:label="Checks" p:labelPlacement="RIGHT">
                <property name="control">
                  <bean parent="CheckboxControl"/>
                </property>
              </bean>
              <bean parent="AttributeField_Form" p:propertyName="field25" p:label="Dollars" p:labelPlacement="RIGHT">
                <property name="control">
                  <bean parent="CheckboxControl"/>
                </property>
              </bean>
              <bean parent="AttributeField_Form" p:propertyName="field26" p:label="Coins" p:labelPlacement="RIGHT">
                <property name="control">
                  <bean parent="CheckboxControl"/>
                </property>
              </bean>
            </list>
          </property>
        </bean>
        <bean parent="FieldGroup" p:label="Field Group 3" p:width="40%" p:labelField.width="10%"
              p:render="@{field28 eq 'joe'}">
          <property name="group.layoutManager.orientation" value="HORIZONTAL"/>
          <property name="items">
            <list>
              <bean parent="AttributeField_Form" p:propertyName="field28" p:label="Field 11" p:showLabel="false"
                    p:maxLength="4" p:required="true">
                <property name="control">
                  <bean parent="TextControl" p:size="5"/>
                </property>
              </bean>
              <bean parent="AttributeField_Form" p:propertyName="field32" p:label="Field 12" p:showLabel="false"
                    p:maxLength="20" p:required="true">
                <property name="control">
                  <bean parent="TextControl" p:size="21"/>
                </property>
              </bean>
            </list>
          </property>
        </bean>
        <bean parent="FieldGroup" p:label="Field Group 4" p:width="40%" p:labelField.width="10%">
          <property name="group.layoutManager.orientation" value="HORIZONTAL"/>
          <property name="items">
            <list>
              <bean parent="AttributeField_Form" p:propertyName="field29" p:label="Field 8" p:labelPlacement="RIGHT">
                <property name="control">
                  <bean parent="CheckboxControl"/>
                </property>
              </bean>
              <bean parent="AttributeField_Form" p:propertyName="field30" p:label="Field 9" p:labelPlacement="RIGHT">
                <property name="control">
                  <bean parent="CheckboxControl"/>
                </property>
              </bean>
              <bean parent="AttributeField_Form" p:propertyName="field31" p:label="Field 10" p:labelPlacement="RIGHT">
                <property name="control">
                  <bean parent="CheckboxControl"/>
                </property>
              </bean>
            </list>
          </property>
        </bean>
      </list>
    </property>
    <property name="instructionalText" value="Section with some field groups"/>
