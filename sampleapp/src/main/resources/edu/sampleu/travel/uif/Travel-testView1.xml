  <bean id="Travel-testView1" parent="FormView">
    <property name="id" value="Travel-testView1"/>
    <property name="title" value="Test View 1"/>
    <property name="entryPageId" value="page1"/>
    <property name="items">
      <list>
        <bean parent="Page_Accordion" p:id="page1">
          <property name="items">
            <list>
              <ref bean="testSection1"/>
              <ref bean="testSection6"/>
              <ref bean="testSection5"/>
              <ref bean="testSection2"/>
              <ref bean="testSection4"/>
            </list>
          </property>
        </bean>
      </list>
    </property>
    <property name="additionalCssFiles" ref="ks-css"/>
    <property name="formClass" value="edu.sampleu.travel.krad.form.UITestForm"/>
    <property name="defaultBindingObjectPath" value="travelAccount1"/>
  </bean>

  <bean id="testSection1-cgrid" parent="testSection1">
    <property name="title" value="Bank Setup - Non Table"/>
    <property name="componentModifiers">
      <list>
      </list>
    </property>
    <property name="items">
      <list>
        <ref bean="testGroup1-cgrid"/>
        <ref bean="testGroup2-cgrid"/>
      </list>
    </property>
  </bean>

  <bean id="testSection1" parent="GroupSection">
    <property name="title" value="Bank Setup"/>
    <property name="items">
      <list>
        <ref bean="testGroup1"/>
        <ref bean="testGroup2"/>
      </list>
    </property>
  </bean>

  <bean id="testGroup1-cgrid" parent="testGroup1">
    <property name="componentModifiers">
      <list>
      </list>
    </property>
    <property name="layoutManager">
      <bean parent="BoxLayoutManager" p:orientation="HORIZONTAL"/>
    </property>
  </bean>

  <bean id="testGroup1" parent="GroupGridLayout">
    <property name="title" value="Bank Information"/>
    <property name="items">
      <list>
        <bean parent="AttributeField_Form" p:propertyName="field1" p:label="Bank Id" p:maxLength="4" p:minLength="2"
              p:instructionalText="Please provide the established federal Id" p:constraintText="Must be 4 chars" p:readOnly="false"
              p:alternateDisplayPropertyName="field2">
          <property name="control">
            <bean id="myField" parent="TextControl" p:size="15" p:watermarkText="####"/>
          </property>
          <property name="fieldLookup.dataObjectClassName" value="edu.sampleu.travel.bo.TravelAccount"/>
          <property name="fieldLookup.fieldConversions">
            <map>
              <entry key="number" value="field1"/>
            </map>
          </property>
        </bean>
        <bean parent="AttributeField_Form" p:propertyName="field2" p:label="Bank Name" p:required="true"
              p:maxLength="25" p:readOnly="true" p:additionalDisplayPropertyName="field1">
          <property name="control">
            <bean parent="TextControl" p:size="26"/>
          </property>
        </bean>
        <bean parent="AttributeField_Form" p:propertyName="field3" p:label="Account Open Date" p:maxLength="9"
              p:hiddenPropertyNames="hidden1,hidden2">
          <property name="control">
            <bean parent="DateControl" p:size="10" p:watermarkText="mm/dd/yyyy"/>
          </property>
        </bean>
        <bean parent="AttributeField_Form" p:propertyName="field4" p:label="Bank Type Code">
          <property name="control">
            <bean parent="SelectControl"/>
          </property>
          <property name="optionsFinder">
            <bean class="edu.sampleu.travel.document.keyvalue.AccountTypeKeyValues"/>
          </property>
        </bean>
      </list>
    </property>
    <property name="instructionalText" value="Provide basic information for the ACH Bank"/>
  </bean>

  <bean id="testGroup2-cgrid" parent="testGroup2">
    <property name="componentModifiers">
      <list>
      </list>
    </property>
    <property name="layoutManager">
      <bean parent="BoxLayoutManager" p:orientation="HORIZONTAL"/>
    </property>
  </bean>

  <bean id="testGroup2" parent="GroupGridLayout">
    <property name="title" value="Test Group 2"/>
    <property name="layoutManager">
      <bean parent="GridLayoutManager" p:numberOfColumns="4" p:style="width: 50%"/>
    </property>
    <property name="items">
      <list>
        <bean parent="AttributeField_Form" p:propertyName="field5" p:readOnly="true" p:label="Field 5" p:width="auto"
              p:maxLength="4">
          <property name="control">
            <bean parent="TextControl" p:size="5"/>
          </property>
          <property name="fieldInquiry.dataObjectClassName" value="edu.sampleu.travel.bo.TravelAccount"/>
          <property name="fieldInquiry.inquiryParameters">
            <map>
              <entry key="field5" value="number"/>
            </map>
          </property>
        </bean>
        <bean parent="AttributeField_Form" p:propertyName="field6" p:label="Field 6" p:readOnly="true" p:required="true"
              p:width="auto" p:maxLength="25">
          <property name="control">
            <bean parent="CurrencyControl" p:size="26" p:maxLength="20"/>
          </property>
        </bean>
        <bean parent="AttributeField_Form" p:propertyName="vField1" p:label="Field 8" p:width="auto" p:maxLength="9">
          <property name="control">
            <bean parent="TextControl" p:size="10"/>
          </property>
          <property name="fieldSuggest.render" value="true"/>
          <property name="fieldSuggest.sourcePropertyName" value="accountTypeCode"/>
          <property name="fieldSuggest.suggestQuery.dataObjectClassName"
                    value="edu.sampleu.travel.bo.TravelAccountType"/>
        </bean>
        <bean parent="AttributeField_Form" p:propertyName="field34" p:label="Field 34" p:width="auto">
          <property name="control">
            <bean parent="CheckboxGroupControl"/>
          </property>
          <property name="optionsFinder">
            <bean class="edu.sampleu.travel.document.keyvalue.AccountTypeKeyValues"/>
          </property>
        </bean>
      </list>
    </property>
    <property name="propertyReplacers">
      <list>
        <bean parent="PropertyReplacer" p:propertyName="title"
              p:condition="#view.id eq 'Travel-testView1'" p:replacement="Subs Test Group"/>
      </list>
    </property>
    <property name="instructionalText" value="Group with grid layout, @{2+2} columns, 50% centered"/>
  </bean>

  <bean id="testSection6" parent="GroupSection">
    <property name="title" value="Test Collections"/>
    <property name="items">
      <list>
        <ref bean="testGroup4"/>
        <ref bean="testGroup5"/>
        <!--           <ref bean="testGroup10"/>
    <ref bean="testGroup11"/>   -->
      </list>
    </property>
  </bean>

  <bean id="testGroup4" parent="CollectionGroupTableLayout" p:layoutManager.numberOfColumns="6">
    <property name="title" value="Collection Group 1"/>
    <property name="collectionObjectClass" value="edu.sampleu.travel.bo.TravelAccount"/>
    <property name="propertyName" value="fiscalOfficer.accounts"/>
    <property name="layoutManager.sequencePropertyName" value="number"/>
    <property name="items">
      <list>
        <bean parent="AttributeField" p:propertyName="number" p:required="true"/>
        <bean parent="AttributeField" p:propertyName="name" p:defaultValue="sub-name"/>
        <bean parent="FieldGroup" p:label="Sub Account" p:progressiveRender="!#empty(#line?.number)"
              p:progressiveRenderViaAJAX="true">
          <property name="items">
            <list>
              <bean parent="AttributeField" p:propertyName="subAccount" p:showLabel="false"/>
              <bean parent="AttributeField" p:propertyName="subAccountName"
                    p:readOnly="true" p:showLabel="false" p:render="@{#line?.subAccount eq 'i84n'}"/>
            </list>
          </property>
        </bean>
        <bean parent="AttributeField" p:propertyName="subsidizedPercent"
              p:readOnly="@{#line?.number ne null and #line?.number ne ''}" p:refreshWhenChanged="#line?.number"/>
        <bean parent="AttributeField" p:propertyName="createDate"/>
        <bean parent="AttributeField" p:propertyName="foId" p:required="true"/>
      </list>
    </property>
    <property name="propertyReplacers">
      <list>
        <bean parent="PropertyReplacer" p:propertyName="layoutManager.actionFieldPrototype"
              p:condition="#view.id eq 'Travel-testView1'">
          <property name="replacement">
            <bean parent="FieldGroup" p:align="center" p:required="false"
                  p:label="Actions!" p:shortLabel="Actions!"/>
          </property>
        </bean>
      </list>
    </property>
    <property name="instructionalText" value="Group with collection and table layout"/>
  </bean>

  <bean id="testGroup5" parent="CollectionGroup">
    <property name="title" value="Collection Group 2"/>
    <property name="collectionObjectClass" value="edu.sampleu.travel.bo.TravelAccount"/>
    <property name="propertyName" value="fiscalOfficer.accounts"/>
    <property name="bindingInfo.bindingObjectPath" value="travelAccount2"/>
    <property name="items">
      <list>
        <bean parent="AttributeField" p:propertyName="number"/>
        <bean parent="AttributeField" p:propertyName="name" p:readOnly="@{#index eq 1}"/>
        <bean parent="AttributeField" p:propertyName="foId" p:defaultValue="1"/>
      </list>
    </property>
    <property name="addLineLabel" value="New @{#component.title}"/>
    <property name="layoutManager.summaryTitle" value="Account"/>
    <property name="layoutManager.summaryFields">
      <list>
        <value>number</value>
        <value>name</value>
      </list>
    </property>
    <property name="instructionalText" value="Group with collection and stacked layout"/>
  </bean>

  <bean id="testGroup10" parent="CollectionGroup">
    <property name="title" value="Sub Collections Stacked"/>
    <property name="collectionObjectClass" value="edu.sampleu.travel.bo.TravelAccount"/>
    <property name="propertyName" value="fiscalOfficer.accounts"/>
    <property name="bindingInfo.bindingObjectPath" value="travelAccount4"/>
    <property name="items">
      <list>
        <bean parent="AttributeField" p:propertyName="number"/>
        <bean parent="AttributeField" p:propertyName="name"/>
        <bean parent="AttributeField" p:propertyName="foId"/>
      </list>
    </property>
    <property name="addLineLabel" value="New Account"/>
    <property name="layoutManager.summaryTitle" value="Account"/>
    <property name="layoutManager.summaryFields">
      <list>
        <value>number</value>
        <value>name</value>
      </list>
    </property>
    <property name="subCollections">
      <list>
        <bean parent="testGroup5">
          <property name="title" value="Sub Collection 1"/>
          <property name="bindingInfo.bindingObjectPath" value="travelAccount4"/>
          <property name="instructionalText" value="Sub collection stacked layout"/>
        </bean>
      </list>
    </property>
    <property name="instructionalText" value="Group with sub-collections and stacked layout"/>
  </bean>

