  <bean id="testGroup3" parent="GroupGridLayout">
    <property name="title" value="Test Group 3"/>
    <property name="layoutManager">
      <bean parent="GridLayoutManager" p:numberOfColumns="4"/>
    </property>
    <property name="items">
      <list>
        <bean parent="AttributeField_Form" p:propertyName="field33" p:label="@{field18}">
          <property name="control">
            <bean parent="TextControl" p:size="5"/>
          </property>
        </bean>
        <bean parent="AttributeField_Form" p:propertyName="field13" p:label="Bank Name" p:required="true">
          <property name="control">
            <bean parent="TextControl" p:size="26"/>
          </property>
          <property name="defaultValue" value="Def VAL"/>
        </bean>
        <bean parent="AttributeField_Form" p:propertyName="field14" p:label="Bank Route Number" p:colSpan="2"
              p:labelField.colSpan="2" p:maxLength="29">
          <property name="control">
            <bean parent="TextControl" p:size="30" p:watermarkText="XXXXYYYYC"/>
          </property>
        </bean>
        <bean parent="AttributeField_Form" p:propertyName="field15" p:label="Bank Address" p:colSpan="3"
              p:labelField.colSpan="1" p:maxLength="69">
          <property name="control">
            <bean parent="TextControl" p:size="70"/>
          </property>
        </bean>
        <bean parent="AttributeField_Form" p:propertyName="field16" p:label="Bank Zip" p:colSpan="2"
              p:labelField.colSpan="2" p:maxLength="4">
          <property name="control">
            <bean parent="TextControl" p:size="5" p:watermarkText="00000"/>
          </property>
        </bean>
        <bean parent="AttributeField_Form" p:propertyName="field17" p:label="Bank Description" p:rowSpan="2"
              p:labelField.rowSpan="2">
          <property name="control">
            <bean parent="TextAreaControl" p:rows="5" p:cols="40" p:watermarkText="Key in bank description here..."/>
          </property>
        </bean>
        <bean parent="AttributeField_Form" p:propertyName="field18" p:label="Bank Type" p:maxLength="9">
          <property name="control">
            <bean parent="DateControl" p:size="10"/>
          </property>
        </bean>
        <bean parent="AttributeField_Form" p:propertyName="field19" p:label="Bank Rating" p:maxLength="9">
          <property name="control">
            <bean parent="DateControl" p:size="10"/>
          </property>
        </bean>
      </list>
    </property>
    <property name="instructionalText" value="Group with grid layout and various col/row spans"/>
  </bean>

