  <bean id="testSection2" parent="GroupSection" p:layoutManager.styleClasses="layout_center"
        p:layoutManager.padding="5px">
    <property name="title" value="Test Section 2"/>
    <property name="fieldBindingObjectPath" value="travelAccount3"/>
    <property name="items">
      <list>
        <bean parent="AttributeField" p:propertyName="number" p:labelPlacement="TOP"
              p:labelField.styleClasses="labelTop" p:labelField.renderColon="false">
          <property name="informationalDisplayPropertyNames" value="name,subAccountName"/>
          <property name="fieldAttributeQuery">
            <bean parent="FieldAttributeQuery" p:dataObjectClassName="edu.sampleu.travel.bo.TravelAccount"
                  p:queryFieldMapping="number:number" p:returnFieldMapping="name:name,subAccountName:subAccountName"/>
          </property>
        </bean>
        <bean parent="AttributeField" p:propertyName="name" p:labelPlacement="TOP"
              p:labelField.styleClasses="labelTop" p:labelField.renderColon="false"/>
      </list>
    </property>
    <property name="instructionalText" value="Section without nested group, labels top"/>
  </bean>

