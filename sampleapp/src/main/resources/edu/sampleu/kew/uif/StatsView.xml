<bean id="KEW-StatView" parent="KNSFormView">
    <property name="id" value="KEW-StatView"/>
    <property name="title" value="Workflow Statistics"/>
    <property name="formClass" value="edu.sampleu.kew.krad.form.StatsForm"/>
    <property name="items">
      <list>
        <bean parent="Page" p:id="page1" p:autoFocus="false" p:errorsField.combineMessages="false" p:errorsField.displayFieldLabelWithMessages="false">
           <property name="items">
             <list>
		          <ref bean="aggregatesSection"/>
		          <ref bean="dateRangesSection"/>
         	 </list>
          </property> 
        </bean> 
      </list>
    </property>    
    <property name="footer">
	<ref bean="Footer_RefreshCancel" />
   </property>
</bean>

   <bean id="aggregatesSection" parent="GroupGridLayout" p:accordion.render="false" p:layoutManager.numberOfColumns="4">
      <property name="title" value="Aggregates"/>
      <property name="fieldBindByNamePrefix" value="stats"/>
      <property name="items">
        <list>
        	<bean parent="AttributeField_Form" p:propertyName="numDocTypes" p:labelField.align="right" p:label="Number of Document Types" p:readOnly="true" p:colSpan="2" p:labelField.colSpan="2" />
	       <bean parent="AttributeField_Form" p:propertyName="numUsers" p:label="Number of Users" p:labelField.align="right" p:readOnly="true" p:colSpan="2" p:labelField.colSpan="2"/>
	       <bean parent="AttributeField_Form" p:propertyName="numActionItems" p:labelField.align="right" p:label="Number of Active Items In All Action Lists" p:readOnly="true" p:colSpan="2" p:labelField.colSpan="2"/>
	       <bean parent="LabelField" p:labelText="Number of Documents Initiated in the Last 30 Days" p:colSpan="2" p:align="right" p:requiredMessageField.render="false"/>
	       
	       <bean id="testSection4" parent="GroupSectionGridLayout" p:accordion.render="false" p:colSpan="2">
      		 <property name="layoutManager">
        	 	<bean parent="GridLayoutManager"/>
      	     </property>
      		 <property name="items">
        		<list>
        			<ref bean="docInfoCollection"/>
        		</list>	
      		</property> 
   		  </bean>  
   		</list>
   	  </property>
  </bean>   
  
  <bean id="docInfoCollection" parent="CollectionGroup" p:accordion.render="false" p:header.render="false">
  <!-- <bean id="docInfoCollection" parent="CollectionGroupTableLayout" p:accordion.render="false" p:header.render="false" p:layoutManager.numberOfColumns="2"> -->
      <property name="collectionObjectClass" value="org.kuali.rice.core.api.util.ConcreteKeyValue"/>
      <property name="propertyName" value="stats.numInitiatedDocsByDocType"/>
      <property name="items">
        <list>
          <!-- <bean parent="LabelField" p:labelText="#line.key"/>
          <bean parent="LabelField" p:labelText="#line.value"/> -->
          <bean parent="AttributeField_Form" p:propertyName="key"  p:showLabel="false" p:readOnly="true"/>
	       <bean parent="AttributeField_Form" p:propertyName="value"  p:showLabel="false" p:readOnly="true"/>
        </list>
      </property>  
      <property name="renderAddLine" value="false"/>
      <property name="renderLineActions" value="false"/>
   </bean> 
   
    <bean id="dateRangesSection" parent="GroupGridLayout" p:accordion.render="false" p:layoutManager.numberOfColumns="4">
      <property name="title" value="Date Range"/>
      <property name="items">
        <list>
        	<bean parent="AttributeField_Form" p:propertyName="begDate" p:label="Begin Date">
	           <property name="control">
              		<bean parent="DateControl" p:size="10" p:watermarkText="mm/dd/yyyy"/>
               </property>
	        </bean>
	        <bean parent="AttributeField_Form" p:propertyName="endDate" p:label="End Date">
	           <property name="control">
              		<bean parent="DateControl" p:size="10" p:watermarkText="mm/dd/yyyy"/>
               </property>
	        </bean>
	        <bean parent="LabelField" p:labelText="Routing Status" p:colSpan="2" p:requiredMessageField.render="false" p:align="center" p:renderColon="false"/>
            <bean parent="LabelField" p:labelText="Number of Documents for Date Range" p:colSpan="2" p:requiredMessageField.render="false" p:align="center" p:renderColon="false"/>
        	<!-- <bean parent="AttributeField_Form" p:propertyName="stats.approvedNumber" p:labelField.align="right" p:label="APPROVED" p:readOnly="true" p:colSpan="2" p:labelField.colSpan="2" /> -->
	        <bean parent="AttributeField_Form" p:propertyName="stats.canceledNumber" p:labelField.align="right" p:label="CANCELED" p:readOnly="true" p:colSpan="2" p:labelField.colSpan="2" />
	        <bean parent="AttributeField_Form" p:propertyName="stats.disapprovedNumber" p:labelField.align="right" p:label="DISAPPROVED" p:readOnly="true" p:colSpan="2" p:labelField.colSpan="2" />
	        
	        <bean parent="AttributeField_Form" p:propertyName="stats.enrouteNumber" p:labelField.align="right" p:label="ENROUTE" p:readOnly="true" p:colSpan="2" p:labelField.colSpan="2" />
	        <bean parent="AttributeField_Form" p:propertyName="stats.exceptionNumber" p:labelField.align="right" p:label="EXCEPTION" p:readOnly="true" p:colSpan="2" p:labelField.colSpan="2" />
	        <bean parent="AttributeField_Form" p:propertyName="stats.finalNumber" p:labelField.align="right" p:label="FINAL" p:readOnly="true" p:colSpan="2" p:labelField.colSpan="2" />
	        <bean parent="AttributeField_Form" p:propertyName="stats.initiatedNumber" p:labelField.align="right" p:label="INITIATED" p:readOnly="true" p:colSpan="2" p:labelField.colSpan="2" />
	        <bean parent="AttributeField_Form" p:propertyName="stats.processedNumber" p:labelField.align="right" p:label="PROCESSED" p:readOnly="true" p:colSpan="2" p:labelField.colSpan="2" />
	        <bean parent="AttributeField_Form" p:propertyName="stats.savedNumber" p:labelField.align="right" p:label="SAVED" p:readOnly="true" p:colSpan="2" p:labelField.colSpan="2" />
   		</list>
   	  </property>
  </bean>   
  
 <bean id="Footer_RefreshCancel" parent="Footer">
      <property name="items">
        <list> 
          <bean parent="ActionField" p:methodToCall="refresh" p:actionLabel="refresh"/>
          <bean parent="ActionField" p:methodToCall="cancel" p:actionLabel="Cancel" />
        </list>
      </property>
  </bean>  
  
</beans>