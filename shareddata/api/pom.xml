<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>rice-shareddata</artifactId>
        <groupId>org.kuali.rice</groupId>
        <version>2.0.0-m9-SNAPSHOT</version>
    </parent>
    <artifactId>rice-shareddata-api</artifactId>
    <name>Rice Shared Data API</name>
    <dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>rice-core-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>rice-api</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
          <groupId>org.springframework</groupId>
          <artifactId>spring-context</artifactId>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.cxf</groupId>
                <artifactId>cxf-java2ws-plugin</artifactId>
                <executions>
                  <execution>
                        <id>sharedDataCacheService-wsdl</id>
						              <phase>${rice.java2ws.phase}</phase>
                        <configuration>
                            <className>org.kuali.rice.core.api.cache.CacheService</className>
                          <outputFile>${project.build.outputDirectory}/wsdl/CacheService.wsdl</outputFile>
                          <targetNamespace>http://rice.kuali.org/shareddata</targetNamespace>
                          <serviceName>SharedDataCacheService</serviceName>
                        </configuration>
                        <goals>
                            <goal>java2ws</goal>
                        </goals>
                    </execution>

                  <execution>
                        <id>countryService-wsdl</id>
						<phase>${rice.java2ws.phase}</phase>
                        <configuration>
                            <className>org.kuali.rice.shareddata.api.country.CountryService</className>
                            <outputFile>${project.build.outputDirectory}/wsdl/CountryService.wsdl</outputFile>
                            <serviceName>CountryService</serviceName>
                        </configuration>
                        <goals>
                            <goal>java2ws</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>campusService-wsdl</id>
						<phase>${rice.java2ws.phase}</phase>
                        <configuration>
                            <className>org.kuali.rice.shareddata.api.campus.CampusService</className>
                            <outputFile>${project.build.outputDirectory}/wsdl/CampusService.wsdl</outputFile>
                            <serviceName>CampusService</serviceName>
                        </configuration>
                        <goals>
                            <goal>java2ws</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>countyService-wsdl</id>
						<phase>${rice.java2ws.phase}</phase>
                        <configuration>
                            <className>org.kuali.rice.shareddata.api.county.CountyService</className>
                            <outputFile>${project.build.outputDirectory}/wsdl/CountyService.wsdl</outputFile>
                            <serviceName>CountyService</serviceName>
                        </configuration>
                        <goals>
                            <goal>java2ws</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>postalCodeService-wsdl</id>
						<phase>${rice.java2ws.phase}</phase>
                        <configuration>
                            <className>org.kuali.rice.shareddata.api.postalcode.PostalCodeService</className>
                            <outputFile>${project.build.outputDirectory}/wsdl/PostalCodeService.wsdl</outputFile>
                            <serviceName>PostalCodeService</serviceName>
                        </configuration>
                        <goals>
                            <goal>java2ws</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>stateService-wsdl</id>
						<phase>${rice.java2ws.phase}</phase>
                        <configuration>
                            <className>org.kuali.rice.shareddata.api.state.StateService</className>
                            <outputFile>${project.build.outputDirectory}/wsdl/StateService.wsdl</outputFile>
                            <serviceName>StateService</serviceName>
                        </configuration>
                        <goals>
                            <goal>java2ws</goal>
                        </goals>
                    </execution>
               </executions>
            </plugin>
        </plugins>
    </build>
</project>
