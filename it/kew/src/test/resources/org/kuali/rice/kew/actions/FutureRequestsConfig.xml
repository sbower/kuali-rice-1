<data xmlns="ns:workflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="ns:workflow resource:WorkflowData">
	<ruleTemplates xmlns="ns:workflow/RuleTemplate" xsi:schemaLocation="ns:workflow/RuleTemplate resource:RuleTemplate">
		<ruleTemplate>
			<name>FutureRequestsTemplate</name>
			<description>FutureRequestsTemplate</description>
		</ruleTemplate>
		<ruleTemplate>
			<name>FutureRequestsTemplate2</name>
			<description>FutureRequestsTemplate2</description>
		</ruleTemplate>
		<ruleTemplate>
			<name>FutureRequestsTemplate3</name>
			<description>FutureRequestsTemplate3</description>
		</ruleTemplate>
	</ruleTemplates>
	<documentTypes xmlns="ns:workflow/DocumentType" xsi:schemaLocation="ns:workflow/DocumentType resource:DocumentType">

		<documentType>
			<name>FutureRequestsDoc</name>
			<description>FutureRequestsDoc</description>
			<label>FutureRequestsDoc</label>
			<postProcessorName>org.kuali.rice.kew.postprocessor.DefaultPostProcessor</postProcessorName>
			<superUserGroupName namespace="KR-WKFLW">TestWorkgroup</superUserGroupName>
			<blanketApproveGroupName namespace="KR-WKFLW">NonSIT</blanketApproveGroupName>
			<defaultExceptionGroupName namespace="KR-WKFLW">TestWorkgroup</defaultExceptionGroupName>
			<docHandler>_blank</docHandler>
			<active>true</active>
			<routePaths>
				<routePath>
					<start name="AdHoc" nextNode="Node1" />
					<requests name="Node1" nextNode="Node2" />
					<requests name="Node2" nextNode="Node3" />
					<requests name="Node3" />
				</routePath>
			</routePaths>
			<routeNodes>
				<start name="AdHoc">
					<activationType>P</activationType>
				</start>
				<requests name="Node1">
					<activationType>S</activationType>
					<ruleTemplate>FutureRequestsTemplate</ruleTemplate>
				</requests>
				<requests name="Node2">
					<activationType>S</activationType>
					<ruleTemplate>FutureRequestsTemplate2</ruleTemplate>
				</requests>
				<requests name="Node3">
					<activationType>S</activationType>
					<ruleTemplate>FutureRequestsTemplate3</ruleTemplate>
				</requests>
			</routeNodes>
		</documentType>
	</documentTypes>
	<rules xmlns="ns:workflow/Rule" xsi:schemaLocation="ns:workflow/Rule resource:Rule">
		<rule>
			<documentType>FutureRequestsDoc</documentType>
			<ruleTemplate>FutureRequestsTemplate</ruleTemplate>
			<description>FutureRequests Doc Rule 1 Node 1</description>
			<forceAction>true</forceAction>
			<responsibilities>
				<responsibility>
					<user>user1</user>
					<actionRequested>A</actionRequested>
					<priority>1</priority>
				</responsibility>
			</responsibilities>
		</rule>
		<rule>
			<documentType>FutureRequestsDoc</documentType>
			<ruleTemplate>FutureRequestsTemplate</ruleTemplate>
			<description>FutureRequests Doc Rule 2 Node 1</description>
			<responsibilities>
				<responsibility>
					<user>user2</user>
					<actionRequested>A</actionRequested>
					<priority>1</priority>
				</responsibility>
			</responsibilities>
		</rule>
		<rule>
			<documentType>FutureRequestsDoc</documentType>
			<ruleTemplate>FutureRequestsTemplate2</ruleTemplate>
			<description>FutureRequests Doc Rule 1 Node 2</description>
			<forceAction>true</forceAction>
			<responsibilities>
				<responsibility>
					<user>user1</user>
					<actionRequested>A</actionRequested>
					<priority>1</priority>
				</responsibility>
			</responsibilities>
		</rule>
		<rule>
			<documentType>FutureRequestsDoc</documentType>
			<ruleTemplate>FutureRequestsTemplate2</ruleTemplate>
			<description>FutureRequests Doc Rule 2 Node 2</description>
			<responsibilities>
				<responsibility>
					<groupName namespace="KR-WKFLW">NonSIT</groupName>
					<actionRequested>A</actionRequested>
					<priority>1</priority>
				</responsibility>
			</responsibilities>
		</rule>
		<rule>
			<documentType>FutureRequestsDoc</documentType>
			<ruleTemplate>FutureRequestsTemplate3</ruleTemplate>
			<description>FutureRequests Doc Rule 1 Node 3</description>
			<responsibilities>
				<responsibility>
					<user>user2</user>
					<actionRequested>A</actionRequested>
					<priority>1</priority>
				</responsibility>
			</responsibilities>
		</rule>
	</rules>
</data>
