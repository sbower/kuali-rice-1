<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>rice-kew</artifactId>
    <groupId>org.kuali.rice</groupId>
    <version>2.0.0-m9-SNAPSHOT</version>
  </parent>
  <artifactId>rice-kew-framework</artifactId>
  <version>2.0.0-m9-SNAPSHOT</version>
  <name>Rice KEW Framework</name>
  <dependencies>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>rice-api</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.cxf</groupId>
        <artifactId>cxf-java2ws-plugin</artifactId>
        <executions>
          <execution>
            <id>searchableAttribute-wsdl</id>
            <phase>${rice.java2ws.phase}</phase>
            <configuration>
              <className>org.kuali.rice.kew.framework.document.attribute.SearchableAttribute</className>
              <outputFile>${project.build.outputDirectory}/wsdl/SearchableAttribute.wsdl</outputFile>
              <serviceName>SearchableAttribute</serviceName>
            </configuration>
            <goals>
              <goal>java2ws</goal>
            </goals>
          </execution>
          <execution>
						<id>documentLookupCustomizationHandlerService-wsdl</id>
						<phase>${rice.java2ws.phase}</phase>
						<configuration>
							<className>org.kuali.rice.kew.framework.document.lookup.DocumentLookupCustomizationHandlerService</className>
							<outputFile>${project.build.outputDirectory}/wsdl/DocumentLookupCustomizationHandlerService.wsdl</outputFile>
							<serviceName>DocumentLookupCustomizationHandlerService</serviceName>
						</configuration>
						<goals>
							<goal>java2ws</goal>
						</goals>
					</execution>
          <execution>
						<id>documentSecurityHandlerService-wsdl</id>
						<phase>${rice.java2ws.phase}</phase>
						<configuration>
							<className>org.kuali.rice.kew.framework.document.security.DocumentSecurityHandlerService</className>
							<outputFile>${project.build.outputDirectory}/wsdl/DocumentSecurityHandlerService.wsdl</outputFile>
							<serviceName>DocumentSecurityHandlerService</serviceName>
						</configuration>
						<goals>
							<goal>java2ws</goal>
						</goals>
					</execution>
          <execution>
						<id>ruleValidationAttributeExporterService-wsdl</id>
						<phase>${rice.java2ws.phase}</phase>
						<configuration>
							<className>org.kuali.rice.kew.framework.validation.RuleValidationAttributeExporterService</className>
							<outputFile>${project.build.outputDirectory}/wsdl/RuleValidationAttributeExporterService.wsdl</outputFile>
							<serviceName>RuleValidationAttributeExporterService</serviceName>
						</configuration>
						<goals>
							<goal>java2ws</goal>
						</goals>
					</execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>